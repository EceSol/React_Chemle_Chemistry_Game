{
    "buildCommand": "cd chemle_client && npm ci && npm run build",
    "installCommand": "cd chemle_client && npm ci",
    "outputDirectory": "chemle_client/dist",
    "framework": "vite",
  
    "rewrites": [
      { "src": "/(.*)", "dest": "/index.html" }
    ],
  
    "headers": [
      {
        "src": "/assets/(.*)",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      },
      {
        "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|gif|svg|woff|woff2|ttf|eot))",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      }
    ]
  }
  